<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    
    <thead>
        <tr>
          <div class="row">
              <th>id</th>
              <th>ステータス</th>
              <th>タスク</th>
            </div>
          </div>
        </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
    </div>
    </div>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>
  
  <%= link_to '新規タスク追加ページ', new_task_path, class: "btn btn-primary" %>
